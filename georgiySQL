import sqlite3

def init_db():
    conn = sqlite3.connect('georgiy_users.db')
    cursor = conn.cursor()
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS georgiys (
        user_id TEXT,
        username TEXT
        )
        ''')
    conn.commit()
    conn.close()

def adding_id_and_username(username_id,user):
    conn = sqlite3.connect('georgiy_users.db')
    cursor = conn.cursor()
    cursor.execute(
        "INSERT OR REPLACE INTO georgiys (user_id, username) VALUES (?, ?)",
        (user.id, username_id)
        )
    conn.commit()
    conn.close()
